<h1 class="rounded">Hello, my name is Ari Alan Pérez Romero</h1>

<p id="notice"><%= notice %></p>

<div class="container container-fluid">
  <div class="row">
    <div class="col">
      <h3 class="mycenter">Knowledge</h3>
    </div>
  </div>

  <div class="row">
    <div class="col">
      · iOS Developer  
    </div>
    <div class="col">
      · Android Developer
    </div>
    <div class="col">
      · Web Developer
    </div>
    <div class="col">
      · Full Stack Engineer
    </div>
    <div class="col">
      · Mobile Application Developer
    </div>    
  </div>

  <div class="row">
    <div class="col">
      <h3 class="mycenter">Projects</h3>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% @presentations.each do |presentation| %>
      <div class="col">
        <div class="card" style="background-color:#55595c;">
          <div class="card-title text-center card-bg-white rounded" style="width:100%;">
            <%= presentation.title %>
          </div>
          <a href="<%= presentation.subtitle %>">
            <% unless presentation.image.blank? %>
              <img src="<%= presentation.image %>" class="card-img-top fullsize" alt="..." />
            <% else %>
              <svg class="svg-icon image-container" viewBox="0 0 20 20">
                <path d="M17.237,3.056H2.93c-0.694,0-1.263,0.568-1.263,1.263v8.837c0,0.694,0.568,1.263,1.263,1.263h4.629v0.879c-0.015,0.086-0.183,0.306-0.273,0.423c-0.223,0.293-0.455,0.592-0.293,0.92c0.07,0.139,0.226,0.303,0.577,0.303h4.819c0.208,0,0.696,0,0.862-0.379c0.162-0.37-0.124-0.682-0.374-0.955c-0.089-0.097-0.231-0.252-0.268-0.328v-0.862h4.629c0.694,0,1.263-0.568,1.263-1.263V4.319C18.5,3.625,17.932,3.056,17.237,3.056 M8.053,16.102C8.232,15.862,8.4,15.597,8.4,15.309v-0.89h3.366v0.89c0,0.303,0.211,0.562,0.419,0.793H8.053z M17.658,13.156c0,0.228-0.193,0.421-0.421,0.421H2.93c-0.228,0-0.421-0.193-0.421-0.421v-1.263h15.149V13.156z M17.658,11.052H2.509V4.319c0-0.228,0.193-0.421,0.421-0.421h14.308c0.228,0,0.421,0.193,0.421,0.421V11.052z"></path>
              </svg>
            <% end %>
          </a>
          <div class="card-body rounded card-bg-white">
            <p class="card-text">
              <%= presentation.content %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'Details', presentation, :class => "btn btn-outline-dark btn-text-black", :onmouseout => "this.style.color='black';", :onmouseover => "this.style.color='white';" %>
                <%= link_to 'Edit', edit_presentation_path(presentation), :class => "btn btn-outline-dark btn-text-black", :onmouseout => "this.style.color='black';", :onmouseover => "this.style.color='white';" %>
                <%= link_to 'Delete', presentation, method: :delete, data: { confirm: 'Are you sure to Delete card?' }, :class => "btn btn-outline-dark btn-text-black", :onmouseout => "this.style.color='black';", :onmouseover => "this.style.color='white';" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>
  
  <% if params['trickdev'] %>
    <div class="row mycenter" style="padding-bottom:50px;">
        <%= link_to 'New Post', new_presentation_path, :class => "btn btn-outline-light", :style => "border: 1px solid black" %>
    </div>
  <% end %>
</div>


